<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.AddTicketController"
            stylesheets="@styles.css" prefWidth="800" prefHeight="600">

    <!-- Header -->
    <Label text="Add Ticket" styleClass="header-label" layoutX="50" layoutY="30" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <!-- Name -->
    <Label text="Name:" layoutX="50" layoutY="100" />
    <TextField fx:id="nameField" layoutX="150" layoutY="100" prefWidth="300" promptText="Ticket Name" />

    <!-- Location -->
    <Label text="Location:" layoutX="50" layoutY="160" />
    <TextField fx:id="locationField" layoutX="150" layoutY="160" prefWidth="300" promptText="Ticket Location" />

    <!-- Capacity -->
    <Label text="Capacity:" layoutX="50" layoutY="220" />
    <TextField fx:id="capacityField" layoutX="150" layoutY="220" prefWidth="300" promptText="Capacity" />

    <!-- Status -->
    <Label text="Availability Status:" layoutX="50" layoutY="280" />
    <ComboBox fx:id="statusComboBox" layoutX="150" layoutY="280" prefWidth="300" promptText="Select Status" />

    <!-- Submit Button -->
    <Button text="Submit" layoutX="320" layoutY="400" fx:id="submitButton" onAction="#handleSubmitAction" prefWidth="150" />

    <!-- Back Button -->
    <Button text="Back" layoutX="150" layoutY="400" fx:id="backButton" onAction="#handleBackAction" prefWidth="150" />
</AnchorPane>


