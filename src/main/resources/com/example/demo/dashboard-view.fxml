<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.DashboardController" stylesheets="@styles.css">
    <!-- Header -->
    <HBox fx:id="header" alignment="CENTER" styleClass="header-container">
        <Label text="Welcome to the New Dashboard" styleClass="header-title"/>
    </HBox>

    <!-- Main Content Area (Dynamic) -->
    <VBox fx:id="mainContent" spacing="30" alignment="CENTER" styleClass="content-area">
        <Button fx:id="btnReservation" text="Manage Reservations" onAction="#navigateToReservation" styleClass="big-button" />
        <Button fx:id="btnHistory" text="View History" onAction="#navigateToHistory" styleClass="big-button" />
        <Button fx:id="btnProfile" text="My Profile" onAction="#navigateToProfile" styleClass="big-button" />
        <Button fx:id="btnLogout" text="Logout" onAction="#logout" styleClass="big-button logout-button" />
    </VBox>
</StackPane>
